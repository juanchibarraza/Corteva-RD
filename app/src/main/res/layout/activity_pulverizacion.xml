<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Objetivo:"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <Spinner
                android:id="@+id/spinnerPulverizacionObjetivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Tipo:"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <Spinner
                android:id="@+id/spinnerPulverizacionTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Operario:"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <Spinner
                android:id="@+id/spinnerPulverizacionOperario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Equipo aplicador:"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <Spinner
                android:id="@+id/spinnerPulverizacionEquipoAplicador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Condiciones Meteorológicas: "
                android:textColor="#000000"
                android:textSize="20sp"
                android:paddingBottom="4dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnClima"
                android:contentDescription="Obtener clima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_weather_cloudy"
                android:backgroundTint="@color/colorPrimary"
                app:tint="@color/white"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginTop="-45dp"
                app:fabCustomSize="40dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperatura:"
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    />

                <EditText
                    android:id="@+id/temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:paddingTop="0dp"
                    android:textColorHint="#808080"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtHum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humedad:"
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/hum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginBottom="5dp"
                    android:inputType="numberDecimal"
                    android:paddingTop="0dp"
                    android:textColorHint="#808080"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtWind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viento:"
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/windSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginBottom="5dp"
                    android:inputType="numberDecimal"
                    android:paddingTop="0dp"
                    android:textColorHint="#808080"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Orden:"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/etPulverizacionOrden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="0dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:textColorHint="#808080"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:text="Observaciones Pulverización:"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/etPulverizacionObservaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColorHint="#808080"
                android:textSize="20sp"
                android:maxLength="250"
                android:paddingTop="0dp"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/botonFotoPulverizacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_camera"
                    android:drawableTint="@color/white"
                    android:text="Capturar"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/botonElegirFotoPulverizacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_paperclip"
                    android:drawableTint="@color/white"
                    android:text="Adjuntar"
                    android:textSize="14dp" />
            </LinearLayout>

            <!--<ImageView
                android:id="@+id/fotoPulverizacion"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/botonElegirFotoPulverizacion"
                android:scaleType="fitCenter"
                android:layout_marginBottom="10dp"/>-->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:visibility="gone">
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageSwitcher"
                android:visibility="gone">
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/botonEnviarPulverizacion"
                android:text="Enviar"
                android:textSize="20dp"
                android:layout_gravity="right"
                android:drawableRight="@drawable/ic_email_send"
                android:drawableTint="@color/white"/>

            <!--<TextView
                android:id="@+id/relleno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:typeface="sans" />-->

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/corteva3" />

</RelativeLayout>